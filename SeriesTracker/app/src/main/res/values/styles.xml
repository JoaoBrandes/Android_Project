<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_colorAccent</item>
        <item name="android:textColor">@color/theme_textColor</item>
        <item name="android:textColorPrimary">@color/theme_textColorPrimary</item>
        <item name="android:windowBackground">@color/theme_windowBackground</item>
    </style>

    <style name="AppTheme.EpisodeDetails"></style>

    <style name="AppTheme.EpisodeDetails.Overlay">
        <item name="android:background">@drawable/overlay</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Screenshot">
        <item name="android:background">@drawable/highlight_placeholder</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Title">
        <item name="android:layout_marginBottom">@dimen/default_spacing_large</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_large</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.EpisodeSummary"></style>

    <style name="AppTheme.EpisodeDetails.EpisodeSummary.CardView">
        <item name="android:layout_marginTop">@dimen/default_spacing_large</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.EpisodeDetails.EpisodeSummary.Text">
        <item name="android:layout_marginTop">@dimen/default_spacing_large</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_large</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
    </style>

    <style name="AppTheme.EpisodeDetails.EpisodeSummary.Text.Date">
        <item name="android:textColor">@color/default_color_first</item>
    </style>

    <style name="AppTheme.EpisodeDetails.EpisodeSummary.Text.Summary">
        <item name="android:textColor">@color/default_textColor_third</item>
    </style>

    <!--Shows-->
    <style name = "AppTheme.Shows">
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">@dimen/shows_spacing</item>
        <item name ="android:gravity">center</item>
        <item name="android:columnWidth">@dimen/show_item_container_width</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:paddingTop">@dimen/show_item_container_padding</item>
        <item name="android:paddingBottom">@dimen/show_item_container_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- TO BE CONTINUED -->

    <!-- Base Navigation -->
    <style name="AppTheme.Base"></style>
    <style name="AppTheme.Base.Navigation"></style>

    <style name="AppTheme.Base.Navigation.Toolbar">
        <item name="android:layout_height">@dimen/base_navigation_toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/base_navigation_toolbar_minHeight</item>
        <item name="android:background">@color/base_navigation_toolbar_background</item>
    </style>

    <style name="AppTheme.Base.Navigation.Toolbar.Transparent">
        <item name="android:background">@color/base_navigation_toolbar_transparent_background</item>
    </style>

    <!-- Base Loading -->
    <style name="AppTheme.Base.Loading"></style>

    <style name="AppTheme.Base.Loading.Container">
        <item name="android:background">@color/base_loading_container_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.Base.Loading.Progress">
        <item name="android:layout_width">@dimen/base_loading_progress_size</item>
        <item name="android:layout_height">@dimen/base_loading_progress_size</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="AppTheme.ShowDetails"></style>

    <style name="AppTheme.ShowDetails.Favorite">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="AppTheme.Base.Navigation.Drawer"></style>

    <style name="AppTheme.Base.Navigation.Drawer.Content">
        <item name="android:layout_width">@dimen/base_navigation_drawer_content_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@color/base_navigation_drawer_content_background</item>
    </style>


    <dimen name="shows_spacing">114dp</dimen>
</resources>